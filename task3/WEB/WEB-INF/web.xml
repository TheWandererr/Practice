<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AppRunningServlet</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.AppRunningServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JavaWebApp</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.JavaWebApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getServlet</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.getServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkServlet</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.checkServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pageServlet</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.pageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test1Servlet</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.test1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test2Servlet</servlet-name>
        <servlet-class>main.com.bsu.exadel.practice.test2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pageServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppRunningServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JavaWebApp</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>main.com.bsu.exadel.practice.TimeMeasurementFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>