<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.bsu.practice.app.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AppRunningServlet</servlet-name>
        <servlet-class>com.bsu.practice.task8.servlets.AppRunningServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetServlet</servlet-name>
        <servlet-class>com.bsu.practice.task8.servlets.GetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>com.bsu.practice.task8.servlets.CheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>com.bsu.practice.task8.servlets.PageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test1Servlet</servlet-name>
        <servlet-class>com.bsu.practice.task8.servlets.Test1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test2Servlet</servlet-name>
        <servlet-class>com.bsu.practice.task8.servlets.Test2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhotoPostServlet</servlet-name>
        <servlet-class>com.bsu.practice.app.servlets.PhotoPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bsu.practice.app.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostListServlet</servlet-name>
        <servlet-class>com.bsu.practice.app.servlets.PostListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LikeServlet</servlet-name>
        <servlet-class>com.bsu.practice.app.servlets.LikePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LikeServlet</servlet-name>
        <url-pattern>/photo-post/like/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostListServlet</servlet-name>
        <url-pattern>/photo-posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhotoPostServlet</servlet-name>
        <url-pattern>/photo-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppRunningServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>com.bsu.practice.task8.filter.TimeMeasurementFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>securityFilter</filter-name>
        <filter-class>com.bsu.practice.app.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>securityFilter</filter-name>
        <url-pattern>/photo-post</url-pattern>
        <url-pattern>/photo-post/like/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>